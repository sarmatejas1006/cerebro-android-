<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="16dp"
    tools:context="com.hci.project.cerebro.TutorProfileActivity">

    <!--Add upto 6 skills-->
    <LinearLayout
        android:id="@+id/add_skills"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Would you like to teach other students too? If so, add 6 topics you're good at!"
            android:textAlignment="center"
            android:textSize="16sp"
            android:textStyle="bold" />

        <GridLayout
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/skill1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="0"
                android:ems="10"
                android:ellipsize="start"
                android:gravity="center_horizontal"
                android:inputType="textPersonName"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/skill2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="start"
                android:gravity="center_horizontal"
                android:layout_column="0"
                android:layout_row="1"
                android:ems="10"
                android:inputType="textPersonName"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/skill3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="start"
                android:gravity="center_horizontal"
                android:layout_column="0"
                android:layout_row="2"
                android:ems="10"
                android:inputType="textPersonName"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/skill4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="start"
                android:gravity="center_horizontal"
                android:layout_column="0"
                android:layout_row="3"
                android:ems="10"
                android:inputType="textPersonName"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/skill5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="start"
                android:gravity="center_horizontal"
                android:layout_column="0"
                android:layout_row="4"
                android:ems="10"
                android:inputType="textPersonName"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/skill6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="start"
                android:gravity="center_horizontal"
                android:layout_column="0"
                android:layout_row="5"
                android:ems="10"
                android:inputType="textPersonName"
                android:textSize="15sp" />
        </GridLayout>

        <!--Set time-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/prompt_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="What time during your day, would you be available to help students?"
                android:textAlignment="center"
                android:textSize="16sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <Button
                    android:id="@+id/from_time"
                    android:layout_width="120dp"
                    android:layout_height="35dp"
                    android:background="@drawable/button_style"
                    android:onClick="onClick"
                    android:text="From: (SELECT)"
                    android:textColor="@android:color/white"
                    android:textSize="13sp" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="0.2" />

                <Button
                    android:id="@+id/till_time"
                    android:layout_width="120dp"
                    android:layout_height="35dp"
                    android:background="@drawable/button_style"
                    android:onClick="onClick"
                    android:text="Till: (SELECT)"
                    android:textColor="@android:color/white"
                    android:textSize="13sp" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/skip"
                android:layout_width="60dp"
                android:layout_height="35dp"
                android:background="@drawable/button_style"
                android:text="Skip \u25b6"
                android:textColor="@android:color/white"
                android:textSize="10dp"
                android:textStyle="bold" />


            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <Button
                android:id="@+id/updateBttn"
                android:layout_width="120dp"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:background="@drawable/button_style"
                android:text="Update Details \u25b6"
                android:textColor="@android:color/white"
                android:textSize="10dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/go_location"
                android:layout_width="130dp"
                android:layout_height="35dp"
                android:background="@drawable/button_style"
                android:text="Choose Location \u25b6"
                android:textColor="@android:color/white"
                android:textSize="10dp"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>


</LinearLayout>
